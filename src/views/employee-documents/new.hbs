<h3 class="mb-3">Upload Document - {{employee.fullName}}</h3>

<form method="POST" action="/employees/{{employee.id}}/documents" enctype="multipart/form-data">
  <div class="mb-3">
    <label class="form-label">Document Type</label>
    <input class="form-control" name="docType" placeholder="Aadhaar / PAN / ..." required />
  </div>

  <div class="mb-3">
    <label class="form-label">PDF File</label>
    <input class="form-control" type="file" name="documentFile" required />
  </div>

  <button class="btn btn-success" type="submit">Upload</button>
  <a class="btn btn-secondary" href="/employees/{{employee.id}}/documents">Cancel</a>
</form>
